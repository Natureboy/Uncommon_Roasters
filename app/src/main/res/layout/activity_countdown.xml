<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#2A2A2A"
        android:keepScreenOn="true"
        tools:context=".CountdownActivity"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instructions"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Additional instructions will appear here during brewing."
            android:textSize="20dp"
            android:textColor="#D2CCB2" />

        <View
            android:id="@+id/timerDivider"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#D2CCB2" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="100dp"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="00:00"
            android:textColor="#D2CCB2"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Start"
            android:textSize="30dp"
            android:background="#D2CCB2"
            android:textColor="#2A2A2A"
            android:textAllCaps="true"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/flash"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:alpha="0"></RelativeLayout>

</RelativeLayout>